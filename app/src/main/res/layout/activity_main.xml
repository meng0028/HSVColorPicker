<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/colorSwatch"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:height="160dp"
        android:background="#000"
        android:layout_marginBottom="8dp"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/hue"
        android:id="@+id/hueTV"
        android:labelFor="@+id/hueSB"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/colorSwatch"
        />
    <FrameLayout
        android:id="@+id/hueFrame"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/hueTV"
        android:layout_gravity="center"
        android:layout_marginTop="8dp">
        <ImageView
            android:id="@+id/hueImage"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:scaleType="fitXY"
            android:src="@drawable/gradient_hue" />
        <SeekBar
            android:id="@+id/hueSB"
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:max="360" />
    </FrameLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/saturation"
        android:id="@+id/saturationTV"
        android:labelFor="@+id/saturationSB"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/hueFrame"
        />
    <FrameLayout
        android:id="@+id/satFrame"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/saturationTV"
        android:layout_gravity="center"
        android:layout_marginTop="8dp">
        <ImageView
            android:id="@+id/satImage"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:scaleType="fitXY"
            android:src="@drawable/gradient_saturation" />
        <SeekBar
            android:id="@+id/saturationSB"
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:max="360" />
    </FrameLayout>

    <TextView
        android:id="@+id/brightnessTV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/satFrame"
        android:labelFor="@+id/brightnessSB"
        android:text="@string/VB"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <FrameLayout
        android:id="@+id/VBFrame"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/brightnessTV"
        android:layout_gravity="center"
        android:layout_marginTop="8dp">
        <ImageView
            android:id="@+id/VBImage"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:scaleType="fitXY"
            android:src="@drawable/gradient_brightness" />
        <SeekBar
            android:id="@+id/brightnessSB"
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:max="360" />
    </FrameLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/VBFrame"
        android:layout_marginTop="32dp">
        <LinearLayout
            android:id="@+id/colorBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/redBtn"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:background="@color/red"
                android:onClick="colorBtn"/>
            <Button
                android:id="@+id/orangeBtn"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:background="@color/orange"
                android:onClick="colorBtn"/>
            <Button
                android:id="@+id/yellowBtn"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:background="@color/yellow"
                android:onClick="colorBtn"/>
            <Button
                android:id="@+id/greenBtn"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:background="@color/green"
                android:onClick="colorBtn"/>
            <Button
                android:id="@+id/blueBtn"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:background="@color/blue"
                android:onClick="colorBtn"/>
            <Button
                android:id="@+id/indigoBtn"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:background="@color/indigo"
                android:onClick="colorBtn"/>
            <Button
                android:id="@+id/violetBtn"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:background="@color/violet"
                android:onClick="colorBtn"/>
        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>